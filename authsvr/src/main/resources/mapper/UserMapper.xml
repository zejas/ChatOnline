<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zejas.authsvr.mapper.UserMapper">
    <update id="updateToken">
        update userinfo set
                            access_token=#{accessToken},
                            refresh_token=#{refreshToken}
        where id=#{id}

    </update>
    <select id="getUserById" resultType="com.zejas.authsvr.model.po.User">
        select * from user where id = #{id}
    </select>
    <select id="getUserByName" resultType="com.zejas.authsvr.model.po.User">
        select * from user where user_name = #{username}
    </select>
    <select id="getUserInfoByUserId" resultType="com.zejas.authsvr.model.po.UserInfo">
        select * from userinfo where user_id = #{userId}
    </select>
</mapper>